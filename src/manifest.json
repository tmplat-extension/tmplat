{
  "manifest_version": 3,
  "name": "__MSG_name__",
  "version": "x.x.x",
  "action": {
    "default_icon": {
      "19": "images/icon_19.png"
    },
    "default_popup": "popup.html",
    "default_title": "__MSG_name__"
  },
  "default_locale": "en",
  "description": "__MSG_description__",
  "icons": {
    "16": "images/icon_16.png",
    "19": "images/icon_19.png",
    "24": "images/icon_24.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "64": "images/icon_64.png",
    "72": "images/icon_72.png",
    "96": "images/icon_96.png",
    "128": "images/icon_128.png"
  },
  "background": {
    "service_worker": "lib/worker/background.js"
  },
  "content_scripts": [
    {
      "js": [
        "lib/content/any-content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_idle"
    },
    {
      "js": [
        "lib/content/homepage-content.js"
      ],
      "matches": [
        "http://*.tmplat.com/*",
        "https://*.tmplat.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "homepage_url": "https://tmplat.com",
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "minimum_chrome_version": "100",
  "offline_enabled": true,
  "optional_permissions": [],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "cookies",
    "geolocation",
    "identity",
    "notifications",
    "scripting",
    "storage",
    "tabs"
  ]
}